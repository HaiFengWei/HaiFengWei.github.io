//首页文章阴影样式
.post {
    margin-top: 60px;
    margin-bottom: 60px;
    padding: 25px;
    -webkit-box-shadow: 0 0 14px rgba(202, 203, 203, .5);
    -moz-box-shadow: 0 0 14px rgba(202, 203, 204, .5);
}
.site-meta .site-title {
    font-size: 40px;
    font-family: 'Comic Sans MS', sans-serif;
    color: #fff;
    background-color: rgba(255,255,255,0);
}

.site-meta .custom-logo-site-title {
    font-size: 28px;
    font-family: 'Comic Sans MS', sans-serif;
    color: #fff;
    background-color: rgba(255,255,255,0);
}
.brand{
   background: none;
}

.powered-by, .theme-info {
    display: none;
}

.post-meta-divider {
    margin: 0 0.5em;
    display: none;
}

.theme-info {
    display: none;
}
